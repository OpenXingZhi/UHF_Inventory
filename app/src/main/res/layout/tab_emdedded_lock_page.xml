<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_embedded_lock"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/chk_enable_embedded_lock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:checked="false"
        android:text="@string/enable" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/chk_enable_embedded_lock_user_mem"
            android:layout_width="130dip"
            android:layout_height="35dip"
            android:checked="false"
            android:text="User Mem" />

        <Spinner
            android:id="@+id/sp_embedded_lock_user_mem"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:entries="@array/embeddedCmdLockItemList" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/chk_enable_embedded_lock_tid_mem"
            android:layout_width="130dip"
            android:layout_height="35dip"
            android:checked="false"
            android:text="TID Mem" />

        <Spinner
            android:id="@+id/sp_embedded_lock_tid_mem"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:entries="@array/embeddedCmdLockItemList" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/chk_enable_embedded_lock_epc_mem"
            android:layout_width="130dip"
            android:layout_height="35dip"
            android:checked="false"
            android:text="EPC Mem" />

        <Spinner
            android:id="@+id/sp_embedded_lock_epc_mem"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:entries="@array/embeddedCmdLockItemList" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/chk_enable_embedded_lock_access_pwb"
            android:layout_width="130dip"
            android:layout_height="35dip"
            android:checked="false"
            android:text="Access PWB" />

        <Spinner
            android:id="@+id/sp_embedded_lock_access_pwb"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:entries="@array/embeddedCmdLockItemList" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/chk_enable_embedded_lock_kill_pwb"
            android:layout_width="130dip"
            android:layout_height="35dip"
            android:checked="false"
            android:text="Kill PWB" />

        <Spinner
            android:id="@+id/sp_embedded_lock_kill_pwb"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:entries="@array/embeddedCmdLockItemList" />
    </LinearLayout>

</LinearLayout>